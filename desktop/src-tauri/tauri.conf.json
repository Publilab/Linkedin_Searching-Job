{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SeekJob",
  "version": "0.1.0",
  "identifier": "com.seekjob.desktop",
  "build": {
    "beforeBuildCommand": "cd ../frontend && npm run build:desktop",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../frontend/out"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SeekJob",
        "width": 1480,
        "height": 960,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "resources": [
      "../../backend/dist/seekjob-backend"
    ]
  }
}
